<div class="row justify-content-center">
    <div class="col-6">
        <div class="row mx-3 justify-content-center">
            <h1 class="col-6 text-center">Sign up</h1>
        </div>
        <div class="row mx-3  justify-content-center">
            <div class="col-6">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                    <%= f.label :name %> <br />
                    <%= f.text_field :name, autofocus: true, aoutocomplete: "name", style:"width:100%;" %>
                </div>
                <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autocomplete: "email", style:"width:100%;" %>
                </div>
                <div class="field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(
                        <%= @minimum_password_length %>文字以上)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", style:"width:100%;" %>
                </div>
                <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", style:"width:100%;" %>
                </div>
                <div class="actions text-center">
                    <%= f.submit('Sign up',class:"btn btn-secondary btn-sm") %>
                </div>
                <% end %>
                <div class="text-center">
                    <%= render "users/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>