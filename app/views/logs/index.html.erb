<p id="notice"><%= notice %></p>

<h1>Log</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.title %></td>
        <td><%= log.start_time.strftime("%Y-%m-%d") %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log.id) %></td>
        <td><%= link_to 'Destroy',log_path(log.id), method: :delete, data: { confirm: '消去しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '日記をかく', new_log_path %>

<%= month_calendar events: @logs do |date, logs| %>
  <%= date.day %>

  <% logs.each do |log| %>
    <div>
      <%= link_to log.title, log %>
    </div>
  <% end %>
<% end %>