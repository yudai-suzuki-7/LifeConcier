<p id="notice"><%= notice %></p>
<div class="row">
<h1>Schedule</h1>
</div>
<div class="row">
  <div class="col-8">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <% if event.end_date <=  Time.zone.now &&  Time.zone.now <= event.start_date %>

      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.start_date.strftime("%m-%d %H:%M:%S") %></td>
        <td><%= event.end_date.strftime("%m-%d %H:%M:%S") %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% else %>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '予定を追加', new_event_path %>

<br>


<div id="calendar"></div>
</div>

</div>