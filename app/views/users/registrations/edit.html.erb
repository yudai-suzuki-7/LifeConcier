<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="row mx-3">
    <h2>登録情報の変更</h2>
</div>
<div class="row mx-3">
    <div class="col-md-6">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for:
            <%= resource.unconfirmed_email %>
        </div>
        <% end %><br>
        <div class="field">
            <%= f.label :password,"新しいパスワード" %> <i>(変更しない場合は空白)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
            <br />
            <em>
                <%= @minimum_password_length %> 文字以上</em>
            <% end %>
        </div><br>
        <div class="field">
            <%= f.label :password_confirmation %><i>(変更しない場合は空白)</i><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
    </div>
    <div class="col-md-6">
        <div>
            <label>リフィルの登録・消去</label><br>
            <span>ToDoリスト</span>
            <%= f.select :todo_status, {"無効":"notuse1","有効":"use1"},class:"form-control" %><br>
            <span>読書日記</span>
            <%= f.select :booklog_status, {"無効":"notuse2","有効":"use2"},class:"form-control" %><br>
        </div><br>
        <div class="field">
            <%= f.label :current_password %> <i>(情報を変更する場合は入力してください)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div><br>
        <div class="actions">
            <%= f.submit "変更する",class:"btn btn-secondary btn-sm"%>
        </div>
    </div>
</div>
<% end %>
<div class="row mx-3">
    <div class="col-12　p-0">
        <h2>アカウントの消去</h2>
        <p>
            <%= button_to "消去する", registration_path(resource_name),class:"btn btn-secondary btn-sm", data: { confirm: "データを修復することができませんが宜しいでしょうか?" }, method: :delete %>
        </p>
    </div>
</div>