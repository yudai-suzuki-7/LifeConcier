<div class="row mx-3">
    <h1>Diary
        <%= link_to "", new_log_path,class:"glyphicon glyphicon-plus-sign" %>
    </h1>
</div>
<div class="row mx-3">
    <div class="log-list col-lg-5 order-lg-2">
        <div class="title">
            <h3 class="mt-0">
                <label><%= @log.title %></label>
                <p>
                    <%= @log.start_time.strftime("%Y/%m/%d") %>
                </p>
            </h3>
        </div>
        <div class="image mt-3">
            <%= attachment_image_tag(@log, :log_img, alt:"Log画像", class:"figure-img img-fluid rounded") %>
        </div>
        <div class="body mt-3">
            <%= @log.content %>
        </div>
        <div class="link-icon mt-3">
            <%= link_to '編集', edit_log_path(@log),class:"btn-link" %> |
            <%= link_to '戻る', logs_path,class:"btn-link" %>
        </div>
    </div>
    <div class="calendar col-lg-7 order-lg-1 p-0">
        <%= month_calendar events: @logs do |date, logs| %>
        <%= date.day %>
        <% logs.each do |log| %>
        <div class="log">
            <%= link_to log.title, log ,class:"btn-link"%>
        </div>
        <% end %>
        <% end %>
    </div>
</div>