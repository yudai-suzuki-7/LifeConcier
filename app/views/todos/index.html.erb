<h1>ToDo List</h1>

<div class="add-form">
  <%= form_for(@todo,url: todos_path) do |form| %>

  <div class="todo_text">
    <%= form.label :todo_text %>
    <%= form.text_field :todo_text %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

  <% end %>

</div>


<table class="todo_list">
  <tr>
    <th></th>
    <th>やること</th>
    <th colspan="2"></th>
  </tr>

  <% @todos.each do |todo| %>
    <tr>
      <td>
        <% if todo.status == "done" %>
        <%= link_to "", check_path(todo), method: :patch, class:"glyphicon glyphicon-ok-circle text-danger" %>
        <% else %>
        <%= link_to "", check_path(todo), method: :patch, class:"glyphicon glyphicon-ok-circle text-secondary" %>
        <% end %>
        </td>
      <td><%= todo.todo_text %></td>
      <td><%= link_to "編集", edit_todo_path(todo) %></td>
      <td><%= link_to "", todo_path(todo),class:"glyphicon glyphicon-trash",  method: :delete, data: { confirm: '消去しますか？' } %></td>
    </tr>
  <% end %>
</table>