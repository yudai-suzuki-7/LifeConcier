<div class="row mx-3" style="margin-top: 26px;">
    <h1>Wish List</h1>
</div>
<div class="row wish-list mx-3">
    <div class="wish-add-form">
        <%= form_for(@wish,url: wishes_path) do |form| %>
        <span class="wish_text">
            <%= form.text_field :wish_text, style:"height:30px; width:300px;" %>
        </span>
        <span class="submit">
            <%= form.submit('追加',class: "btn btn-secondary btn-sm ") %>
        </span>
        <% end %>
    </div>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th></th>
                <th class="wish-texts">やりたいこと</th>
                <th>LogicTree</th>
                <th>編集</th>
                <th>消去</th>
            </tr>
        </thead>
        <tbody>
            <% @wishes.each_with_index do |wish, i| %>
            <tr>
                <%= render 'check',wish: wish %>
                <td class="wish-text">
                    <%="#{(i + 1)}"%>.
                    <%= wish.wish_text %>
                </td>
                <td class="link-icon">
                    <%= link_to "", wish_path(wish),class:"btn-link glyphicon glyphicon-tree-deciduous" %>
                </td>
                <td class="link-icon">
                    <%= link_to "", edit_wish_path(wish),class:"btn-link glyphicon glyphicon-edit text-center" %>
                </td>
                <td class="link-icon">
                    <%= link_to "", wish_path(wish),class:"btn-link glyphicon glyphicon-trash text-center", method: :delete, data: { confirm: '消去しますか？' } %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>