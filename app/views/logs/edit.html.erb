<div class="row">
<p id="notice"><%= notice %></p>
<h1>Log</h1>
</div>

<div class="row">
<div class="calendar col-7">
<%= month_calendar events: @logs do |date, logs| %>
  <%= date.day %>

  <% logs.each do |log| %>
    <div>
      <%= link_to log.title, log %>
    </div>
  <% end %>
<% end %>
</div>


<div class="col-5">

<%= form_with(model: @log, local: true) do |form| %>

  <div class="title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.date_select :start_time, use_month_numbers:true, date_separator:" / " %>
  </div>

  <div class="content">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>

</div>
</div>