<div class="row">
  <h1>Schedule</h1>
  <div class="col-1 add-button">
    <%= link_to "", new_event_path,class:"glyphicon glyphicon-plus-sign" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Start</th>
          <th>End</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.body %></td>
            <td><%= event.start_date.strftime("%m-%d %H:%M:%S") %></td>
            <td><%= event.end_date.strftime("%m-%d %H:%M:%S") %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: '削除しますか?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table><br>
    <div id="calendar"></div>
  </div>
</div>