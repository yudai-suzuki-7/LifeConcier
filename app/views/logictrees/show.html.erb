                <strong class="wish-text">
                    <%= @wish.wish_text %></strong>
            </td>
            <td class="wish" rowspan="3">
                <%= form.text_area :logic1 %>
            </td>
            <td class="logic11">
                <%= form.text_field :logic11 %>
            </td>
        </tr>
        <tr>
            <td class="logic12">
                <%= form.text_field :logic12 %>
            </td>
        </tr>
        <tr>
            <td class="logic13">
                <%= form.text_field :logic13 %>
            </td>
        </tr>
        <tr>
            <td class="logic2" rowspan="3">
                <%= form.text_area :logic2 %>
            </td>
            <td class="logic21">
                <%= form.text_field :logic21 %>
            </td>
        </tr>
        <tr>
            <td class="logic22">
                <%= form.text_field :logic22 %>
            </td>
        </tr>
        <tr>
            <td class="logic23">
                <%= form.text_field :logic23 %>
            </td>
        </tr>
        <tr>
            <td class="logic3" rowspan="3">
                <%= form.text_area :logic3 %>
            </td>
            <td class="logic31">
                <%= form.text_field :logic31 %>
            </td>
        </tr>
        <tr>
            <td class="logic32">
                <%= form.text_field :logic32 %>
            </td>
        </tr>
        <tr>
            <td class="logic33">
                <%= form.text_field :logic33 %>
            </td>
        </tr>
    </table>
</div>
<div class="submit">
    <%= form.submit %>
</div>
<% end %>
